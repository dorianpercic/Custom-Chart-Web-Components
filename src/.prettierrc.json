{
  "overrides": [
    {
      "files": "*.js",
      "options": {
        "semi": true,
        "useTabs": false,
        "tabWidth": 2,
        "trailingComma": "es5",
        "singleQuote": true
      }
    },
    {
      "files": "*.html",
      "options": {
        "semi": false,
        "useTabs": false,
        "tabWidth": 2,
        "trailingComma": "es5",
        "bracketSameLine": true
      }
    }
  ]
}
